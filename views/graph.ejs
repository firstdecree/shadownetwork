    <script>

        function toggleProfileMenu(e) {
            e.stopPropagation()
            const container = document.getElementById("profileMenu")
            const btn = container.querySelector(".profile-btn")
            const isActive = container.classList.contains("active")

            if (isActive) {
                container.classList.remove("active")
                btn.setAttribute("aria-expanded", "false")
            } else {
                container.classList.add("active")
                btn.setAttribute("aria-expanded", "true")
            }
        }

        document.addEventListener("click", function (e) {
            const container = document.getElementById("profileMenu")
            if (container && !container.contains(e.target) && container.classList.contains("active")) {
                container.classList.remove("active")
                container.querySelector(".profile-btn").setAttribute("aria-expanded", "false")
            }
        })


        const canvas = document.getElementById("graph-canvas")
        const world = document.getElementById("graph-world")
        const edgesSvg = document.getElementById("graph-edges")


        let isDragging = false
        let startX, startY
        let transX = 0, transY = 0
        let scale = 1

        function updateTransform() {
            world.style.transform = `translate(${transX}px, ${transY}px) scale(${scale})`
        }

        canvas.addEventListener("mousedown", (e) => {
            isDragging = true
            startX = e.clientX - transX
            startY = e.clientY - transY
        })

        window.addEventListener("mouseup", () => {
            isDragging = false
        })

        window.addEventListener("mousemove", (e) => {
            if (!isDragging) return
            transX = e.clientX - startX
            transY = e.clientY - startY
            updateTransform()
        })


        canvas.addEventListener("wheel", (e) => {
            e.preventDefault()

            const zoomSensitivity = 0.0015
            const delta = -e.deltaY * zoomSensitivity


            const newScale = Math.min(Math.max(0.1, scale + delta), 4)


            const rect = canvas.getBoundingClientRect()
            const mouseX = e.clientX - rect.left
            const mouseY = e.clientY - rect.top


            transX = mouseX - (mouseX - transX) * (newScale / scale)
            transY = mouseY - (mouseY - transY) * (newScale / scale)
            scale = newScale

            updateTransform()
        }, { passive: false })


        async function fetchAndRenderGraph() {
            if (!graphData) {
                try {
                    const res = await fetch("/api/network-data")
                    if (res.ok) {
                        graphData = await res.json()
                    } else {
                        console.error("Failed to load network data")
                        return
                    }
                } catch (err) {
                    console.error("Error fetching network data:", err)
                    return
                }
            }
            renderGraph()
        }

        function renderGraph() {

            const rect = canvas.getBoundingClientRect()
            if (rect.width === 0 || rect.height === 0) {
                setTimeout(renderGraph, 50)
                return
            }

            const centerX = rect.width / 2
            const centerY = rect.height / 2


            let nodesHtml = ""
            let edgesHtml = `
                <defs>
                    <marker id="arrow" viewBox="0 0 10 10" refX="9" refY="5" markerWidth="8" markerHeight="8" orient="auto-start-reverse">
                        <path d="M 0 1 L 10 5 L 0 9 z" fill="rgba(255, 255, 255, 0.4)" />
                    </marker>
                </defs>
            `
            let labelsHtml = ""

            const total = graphData.contacts.length
            const nodePositions = {}


            graphData.contacts.forEach((contact, i) => {
                const goldenRatio = 1.61803398875
                const angle = i * Math.PI * 2 * goldenRatio

                const radius = 150 + (i * 15)

                const x = centerX + Math.cos(angle) * radius
                const y = centerY + Math.sin(angle) * radius

                const aliasStr = contact.alias || "Unknown"
                const initial = aliasStr.charAt(0).toUpperCase()

                nodePositions[aliasStr] = { x, y }

                const encodedData = encodeURIComponent(JSON.stringify(contact))

                nodesHtml += `
                    <div class="node-bubble node-contact" style="left: ${x}px; top: ${y}px;" title="${aliasStr}" onclick="showNodeDetails('${encodedData}', event)">
                        <div class="node-initial">${initial}</div>
                        <div class="node-alias">${aliasStr}</div>
                    </div>
                `
            })


            graphData.contacts.forEach((contact) => {
                if (contact.relations && contact.relations.length > 0) {
                    contact.relations.forEach(rel => {
                        const targetAlias = rel.contact
                        const label = rel.label || "Connected"

                        const sourcePos = nodePositions[contact.alias]
                        const targetPos = nodePositions[targetAlias]

                        if (sourcePos && targetPos) {
                            const dx = targetPos.x - sourcePos.x
                            const dy = targetPos.y - sourcePos.y
                            const dist = Math.sqrt(dx * dx + dy * dy)
                            const padding = 55

                            if (dist > padding * 2) {
                                const startX = sourcePos.x + dx * (padding / dist)
                                const startY = sourcePos.y + dy * (padding / dist)
                                const endX = sourcePos.x + dx * ((dist - padding) / dist)
                                const endY = sourcePos.y + dy * ((dist - padding) / dist)

                                edgesHtml += `<line class="edge" x1="${startX}" y1="${startY}" x2="${endX}" y2="${endY}" marker-end="url(#arrow)"></line>`
                            }

                            const midX = sourcePos.x + dx * 0.35
                            const midY = sourcePos.y + dy * 0.35

                            labelsHtml += `
                                <div style="position: absolute; left: ${midX}px; top: ${midY}px; transform: translate(-50%, -50%); background: rgba(0, 0, 0, 0.7); padding: 4px 8px; border-radius: 6px; font-size: 0.7rem; font-weight: 500; color: #00ff80; border: 1px solid rgba(0,255,128,0.3); backdrop-filter: blur(4px); z-index: 6; pointer-events: none; white-space: nowrap;">
                                    ${label}
                                </div>
                            `
                        }
                    })
                }
            })

            edgesSvg.innerHTML = edgesHtml

            world.innerHTML = edgesSvg.outerHTML + labelsHtml + nodesHtml


        }


        canvas.addEventListener("click", (e) => {

            if (e.target.id === "graph-canvas" || e.target.id === "graph-world" || e.target.tagName === "svg") {
                closeNodeDetails()
            }
        })

        const sidebar = document.getElementById("node-details")

        function showNodeDetails(encodedData, event) {

            if (event) event.stopPropagation()

            try {
                const contact = JSON.parse(decodeURIComponent(encodedData))

                document.getElementById("sidebar-avatar").innerText = contact.alias ? contact.alias.charAt(0).toUpperCase() : "?"
                document.getElementById("sidebar-name").innerText = contact.alias || "Unknown"

                document.getElementById("sidebar-pubkey").innerText = (contact.publicKey && contact.publicKey.trim() !== "") ? contact.publicKey : "None recorded."
                document.getElementById("sidebar-note").innerText = (contact.note && contact.note.trim() !== "") ? contact.note : "No notes attached."

                const connContainer = document.getElementById("sidebar-connections")
                connContainer.innerHTML = ""
                if (contact.connections && contact.connections.length > 0) {
                    contact.connections.forEach(conn => {
                        connContainer.innerHTML += `<div class="detail-value" style="margin-bottom: 0.5rem;"><b>${conn.source}:</b> ${conn.contact}</div>`
                    })
                } else {
                    connContainer.innerHTML = `<div class="detail-value" style="color: var(--text-secondary);">No external links.</div>`
                }

                const relContainer = document.getElementById("sidebar-relations")
                relContainer.innerHTML = ""
                if (contact.relations && contact.relations.length > 0) {
                    contact.relations.forEach(rel => {
                        relContainer.innerHTML += `<div class="detail-value" style="margin-bottom: 0.5rem; background: rgba(0,255,128,0.05); color: #00ff80; border-color: rgba(0,255,128,0.2);"><b>${rel.label || "Linked"}:</b> ${rel.contact}</div>`
                    })
                } else {
                    relContainer.innerHTML = `<div class="detail-value" style="color: var(--text-secondary);">No active relationships.</div>`
                }


                sidebar.classList.add("active")
            } catch (e) {
                console.error("Failed to parse node data", e)
            }
        }

        function closeNodeDetails() {
            sidebar.classList.remove("active")
        }


        window.addEventListener("load", fetchAndRenderGraph)

    </script>
