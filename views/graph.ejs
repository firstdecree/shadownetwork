            color: #00ff80;
            font-size: 1.5rem;
            box-shadow: 0 0 20px rgba(0, 255, 128, 0.2);
            z-index: 20;
        }

        .node-contact {
            width: 90px;
            height: 90px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            font-size: 0.8rem;
            text-align: center;
            padding: 8px;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .node-contact:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(0, 255, 128, 0.5);
            transform: translate(-50%, -50%) scale(1.05);
            z-index: 30;
        }

        .node-alias {
            word-break: break-word;
            line-height: 1.1;
        }

        .node-initial {
            font-size: 1.25rem;
            opacity: 0.5;
        }

        #graph-edges {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 5;
        }

        line.edge {
            stroke: rgba(255, 255, 255, 0.1);
            stroke-width: 1.5px;
        }

        @media (max-width: 900px) {
            .sidebar {
                display: none;
            }

            .main-content {
                margin-left: 0;
            }
        }


        .details-sidebar {
            position: absolute;
            top: 0;
            right: -400px;
            width: 350px;
            height: 100%;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(10px);
